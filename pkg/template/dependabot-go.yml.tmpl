{{- range . }}
  - package-ecosystem: "gomod"
    directory: "{{ .Directory -}}"
    schedule:
      interval: "weekly"
      day: "sunday"
    commit-message:
      include: "scope"
    groups:
      minor:
        patterns:
          - "*"
        update-types:
          - "minor"
          - "patch"
{{- end -}}
