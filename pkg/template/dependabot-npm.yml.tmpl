{{- range . }}
  - package-ecosystem: "npm"
    directory: "{{ .Directory -}}"
    schedule:
      interval: "{{ .Interval -}}"
      {{- if and .Day (eq .Interval "weekly") }}
      day: "{{ .Day -}}"
      {{- end }}
    commit-message:
      include: "scope"
    {{- if .Registries }}
    registries:
      - {{ .Registries }}
    {{- end }}
    groups:
      minor:
        patterns:
          - "*"
        update-types:
          - "minor"
          - "patch"
{{- end -}}
